<div class="panel panel-default">
  <div class="panel-heading">
    <%= t 'user.register' %>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-group">
        <%= f.label t('fields.email'), class: 'input-group-addon' %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('fields.email') %>
      </div>
      <div class="input-group">
        <%= f.label t('user.password'), class: 'input-group-addon' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('user.password') %>
      </div>
      <div class="input-group">
        <%= f.label t('user.password_confirmation'), class: 'input-group-addon' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('user.password_confirmation') %>
      </div>
      <div class="actions">
        <%= f.submit t('user.register'), class: 'btn btn-default' %>
      </div>

    <% end %>
  </div>
  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
