<div class="panel panel-default">
  <div class="panel-heading">
    <%= t 'menu.my_works' %>
    <%= link_to t('my_works.new_work'), new_work_path, :class => 'btn btn-default btn-xs pull-right' %>
  </div>
  
  <div class="panel-body">
    
    <div class="list-group">
    <% @works.each do |work| %>
      <%= active_rich_link_to(work, :class => 'list-group-item') do %>
        <h4 class="list-group-item-heading"><%= work.title %></h4>
        <p class="list-group-item-text"><%= work.description %></p>
      <% end %>
    <% end %>
    </div>
    
  </div>
</div>
