<div class="panel panel-default">
  <div class="panel-heading">
    <%= t 'my_ideas.ideas_for_site' %>
    <% if current_user_is_admin? %>
      <%= link_to t('my_ideas.new_idea'), new_idea_path, :class => 'pull-right' %>
    <% end %>
  </div>
  
  <div class="panel-body">
    
    <% if current_user_is_admin? %>
    <ul class="list-group">
    <% @ideas.each do |idea| %>
    
      <li style="position:relative">
        <%= link_to(edit_idea_path(idea), class: 'list-group-item') do %>
          <h4 class="list-group-item-heading"><%= idea.title %></h4>
          <p class="list-group-item-text"><%= idea.description %></p>
        <% end %>
        <div class="list-group-item-buttons">
          <%= form_tag move_idea_path idea do %>
            <%= button_move :up %>
            <%= button_move :down %>
          <% end %>
        </div>
      </li>
      
    <% end %>
    </ul>
    
    <% else %>
    
    <ul class="list-group">
    <% @ideas.each do |idea| %>
    
      <li class="list-group-item">
        <h4 class="list-group-item-heading"><%= idea.title %></h4>
        <p class="list-group-item-text"><%= idea.description %></p>
      </li>
      
    <% end %>
    
    </ul>
    <% end %>
    
  </div>
</div>
