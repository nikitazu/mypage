<!DOCTYPE html>
<html>
<head>
  <title>Mypage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

<div>
    <div class="promo-image">
      <span class="promo-text">
        <%= random_quote %>
      </span>
    </div>
    
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <%= link_to t('menu.my_page'), :root, :class => 'navbar-brand' %>
      </div>
      
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= flag %>
              <%= t 'my_page.language' %> (<%= I18n.locale %>)
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu flag-menu" role="menu">
              <li>
                <a href="/ru"><%= flag :ru %><span>Русский</span></a>
              </li>
              <li>
                <a href="/en"><%= flag :en %></span><span>English</span></a>
              </li>
            </ul>
          </li>
        </ul>
        
        
        <% if user_signed_in? %>
        
        <%= form_tag destroy_user_session_path, class: 'navbar-form navbar-right', role: 'form', method: 'delete'  do %>
          <button type="submit" class="btn btn-default">
            <%= t 'user.logout' %>
          </button>
        <% end %>
        
        <% else %>
        
        <%= form_tag new_user_registration_path, class: 'navbar-form navbar-right', role: 'form', method: 'get'  do %>
          <span style="color:white">
            <%= t 'panels.or' %> &nbsp;
          </span>
          <button type="submit" class="btn btn-default">
            <%= t 'user.register' %>
          </button>
        <% end %>
        
        <%= form_tag user_session_path, class: 'navbar-form navbar-right', role: 'form' do %>
          <input name="user[email]" type="email" class="form-control" placeholder="<%= t 'user.username' %>">
          <input name="user[password]" type="password" class="form-control" placeholder="<%= t 'user.password' %>">
          <button type="submit" class="btn btn-default">
            <%= t 'user.login' %>
          </button>
        <% end %>
        
        <% end %>
      </div>
    </nav>
    
    <div class="container" id="main">
      <div class="row">
        <div>
          <% if notice %>
          <p class="notice"><%= notice %></p>
          <% end %>
          
          <% if alert %>
          <p class="alert"><%= alert %></p>
          <% end %>
          
          <div class="col-md-3">
            <div class="panel panel-default sidebar-nav">
              <div class="panel-heading">
                <%= t 'menu.main_menu' %>
              </div>
              <div class="panel-body">
                <div class="list-group">
                  <%= active_link_to t('menu.my_page'), :root, :class => 'list-group-item' %>
                  <%= active_link_to t('menu.my_works'), works_path, :class => 'list-group-item' %>
                  <%= active_link_to t('menu.my_stuff'), ideas_path, :class => 'list-group-item' %>
                </div>
              </div>
            </div>
            
          </div>
          <div class="col-md-9">
            <%= yield %>
          </div>
      </div>
    </div>
  </div>
  
  <div class="copynone">
    <hr/>
    <%= t 'panels.copynone' %>
  </div>
</div>

</body>
</html>
