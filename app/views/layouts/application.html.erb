<!DOCTYPE html>
<html>
<head>
  <title>Mypage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div>
    <div class="promo-image">
      <span class="promo-text">
        <%= random_quote %>
      </span>
    </div>
    
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <%= link_to t('menu.my_page'), :root, :class => 'navbar-brand' %>
      </div>
      
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t 'my_page.language' %> (ru)<span class="caret"></span></a>
            <ul class="dropdown-menu flag-menu" role="menu">
              <li>
                <a href="/ru"><span class="flag flag-ru"></span><span>Русский</span></a>
              </li>
              <li>
                <a href="/en"><span class="flag flag-gb"></span><span>English</span></a>
              </li>
            </ul>
          </li>
        </ul>
        
        <form class="navbar-form navbar-right" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="<%= t 'user.username' %>">
            <input type="password" class="form-control" placeholder="<%= t 'user.password' %>">
          </div>
          <button type="submit" class="btn btn-default">
            <%= t 'user.login' %>
          </button>
        </form>
        
      </div>
    </nav>
    
    <div class="container" id="main">
      <div class="row">
        <div>
          <div class="col-md-3">
            <div class="panel panel-default sidebar-nav">
              <div class="panel-heading">
                <%= t 'menu.main_menu' %>
              </div>
              <div class="panel-body">
                <div class="list-group">
                  <%= active_link_to t('menu.my_page'), :root, :class => 'list-group-item' %>
                  <%= active_link_to t('menu.my_works'), works_path, :class => 'list-group-item' %>
                  <%= active_link_to t('menu.my_stuff'), ideas_path, :class => 'list-group-item' %>
                </div>
              </div>
            </div>
            
          </div>
          <div class="col-md-9">
            <%= yield %>
          </div>
      </div>
    </div>
  </div>
  
  <div class="copynone">
    <hr/>
    <%= t 'panels.copynone' %>
  </div>
</div>

</body>
</html>
